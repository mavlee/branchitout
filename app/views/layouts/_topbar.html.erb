          <div class="user-status-container">
            <span>
              <a class="btn primary loginButton" href="<%= logout_path %>">Logout</a>
              <span class="welcomeLine">Welcome <strong><%= current_user.username %></strong></span>
            </span>
          </div>
        <% else %>
          <div class="user-status-container">
            <span>
              <a class="btn primary loginButton" href="<%= login_path %>">Login</a>
              <span class="welcomeLine">Welcome <strong>Guest</strong></span>
            </span>
          </div>
        <% end %>
      </div>
    </div>
