<div class="editItemForm row">
  <div class="row">
    <div class="span6 offset2">
      <h1>Feedback</h1>
    </div>
  </div>
  <!--TODO: Make a mailer -->
  <div class="row">
    <%= form_for Feedback.new do |form| %>
      <div class="row">
        <div class="offset2 span14">

          <label for="title">Email</label>
          <div class="input">
            <%= form.text_field :email, :placeholder => "Email", :class => "span10 mainField" %>
          </div>
          <div class="clearfix"></div>
          <label for="title">Subject</label>
          <div class="input">
            <%= form.text_field :subject, :placeholder => "Subject", :class => "span10 mainField" %>
          </div>
          <div class="clearfix"></div>
          <label for="description">Message</label>
          <div class="input">
            <%= form.text_area :message, :placeholder => "Message", :class => "span10 offset2 descriptionField" %>
          </div>
          <div class="clearfix"></div>
          <div class="row">
            <div class="span4 offset2">
              <%= form.submit "Submit", :class => "btn saveButton" %>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
