<div class="row">
  <div class="span8 offset4">
    <div class="loginForm">
      <%= form_for(:sessions, :url => sessions_path) do |form| %>
        <div>Username</div>
        <%= form.text_field :username, :placeholder => "Enter username...", :autocomplete => "on" %>
        <br />
        <div>Password</div>
        <%= form.password_field :password, :placeholder => "Enter password..." %>
        <br />
        <%= form.submit "Login", :class => "btn primary loginButton" %>
      <% end %>
    </div>
    <div class="clear"></div>

    New to branchitout.com?
    <%= link_to "Sign up here", signup_path, :class => "btn" %>
  </div>
</div>
