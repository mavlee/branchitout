<h1>Listing story_nodes</h1>

<table>
  <tr>
    <th>Title</th>
    <th>Content</th>
    <th>Story</th>
    <th>Author</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @story_nodes.each do |story_node| %>
  <tr>
    <td><%= story_node.title %></td>
    <td><%= story_node.content %></td>
    <td><%= story_node.story_id %></td>
    <td><%= story_node.author_id %></td>
    <td><%= link_to 'Show', story_node %></td>
    <td><%= link_to 'Edit', edit_story_node_path(story_node) %></td>
    <td><%= link_to 'Destroy', story_node, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

